py -m venv venv
.\venv\Scripts\activate
py -m pip install -r requirements.txt   # Install dependencies
python.exe -m pip install --upgrade pip # Upgrade pip
py -m pip install --upgrade pyinstaller # Upgrade pyinstaller
python main.py
---------------------------------------------------------------------------
# Basic build (creates a single executable)
python build.py

# Build with console window
python build.py --console

# Clean build
python build.py --clean

# Dry run (show what would be done)
python build.py --dry-run

# Verbose output
python build.py -v

# Custom output filename
python build.py --output MyApp